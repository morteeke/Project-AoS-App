<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.OpenPlayPage">

    <ScrollView>
        <Grid RowSpacing="10" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <ImageButton 
                x:Name="NewArmyButton"
                HorizontalOptions="Start"
                Grid.Row="0"
                Source="plussign.png"
                HeightRequest="50"
                WidthRequest="100"
                BackgroundColor="Black"
                Clicked="NewArmyButton_Clicked"/>

            <ImageButton
                x:Name="ArmyButton"
                Grid.Row="1"
                Source="openplaybackground.jpg"
                BackgroundColor="Black"
                />

            
        </Grid>
    </ScrollView>
</ContentPage>